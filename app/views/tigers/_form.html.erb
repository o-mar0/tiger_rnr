<% species = ['Sumatran Tiger', 'Amur Tiger', 'Bengal Tiger', 'South China Tiger', 'Malayan Tiger', 'Indo-Chinese Tiger'] %>

<%= simple_form_for @tiger do |f| %>
  <%= f.input :name %>
  <%= f.input :age %>
  <%= f.input :species, as: :select, collection: species, input_html: { class: 'select2' } %>
  <%= f.input :location %>
  <%= f.input :price %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <div class="card-right text-right">
    <%= f.submit class: 'submit' %>
  </div>
<% end %>
