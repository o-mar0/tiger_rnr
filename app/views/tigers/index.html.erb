<div class="wraper">
  <div class="tigers-container">
    <div class="search">
      <%= form_tag tigers_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search tigers"
        %>
      <% end %>
    </div>


    <div class="card-grid">
      <% @tigers.each do |tiger| %>
        <%= link_to tiger_path(tiger), class: 'card-button' do  %>
          <div class="card">
            <div class="card-tiger d-flex justify-content-around align-items-center" style="background-image: url('<%= cl_image_path tiger.photo %>')"></div>
            <div class="info">
              <div class="card-tab d-flex justify-content-between align-items-center">
                <p><strong><%= tiger.name %></strong>, <%= tiger.age %> years old</p>
                <p><strong>$<%= tiger.price %> / day</strong></p>
              </div>
              <p><%= tiger.species %></p>
              <p><%= tiger.location %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
